<% layout('layout') -%>
<% script('/javascripts/users.js') -%>
<% script('/javascripts/fb.js') -%>

<div class="uk-grid" data-uk-grid-margin>

    <div class="uk-width-medium-1-3">
        <div class="uk-panel uk-panel-box uk-panel-box-secondary">
            <h3 class="uk-panel-title">Facebook Connect</h3>
            <div id="fb-root"><fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button></div>
            <div id="status"></div>
        </div>
    </div>

    <div class="uk-width-medium-2-3">
        <div class="uk-panel uk-panel-header">

            <div id="formErrors" class="uk-alert uk-alert-danger"></div>
            <form class="uk-form uk-form-stacked" id="signup-form">

                <div class="uk-form-row">
                    <label class="uk-form-label">First Name</label>
                    <div class="uk-form-controls">
                        <input type="text" placeholder="" name="firstname" id="firstname" class="uk-width-1-1">
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label">Last Name</label>
                    <div class="uk-form-controls">
                        <input type="text" placeholder="" name="lastname" id="lastname" class="uk-width-1-1">
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label">Email Address</label>
                    <div class="uk-form-controls">
                        <input type="text" placeholder="" name="email" id="email" class="uk-width-1-1">
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label">Password</label>
                    <div class="uk-form-controls">
                        <input type="password" placeholder="" name="password" id="password" class="uk-width-1-1">
                    </div>
                </div> 

                <div class="uk-form-row">
                    <div class="uk-form-controls">
                        <input type="checkbox" name="terms" id="terms" /> I agree to the <a href="#">Terms & Conditions</a>
                    </div>
                </div> 

                <div class="uk-form-row">
                    <div class="uk-form-controls">
                        <input type="submit" class="uk-button uk-button-primary" value="Submit" name="submit" id="submit" />&nbsp;&nbsp;<input type="reset" id="cancel" class="uk-button uk-button-secondary" value="Cancel" />
                    </div>
                </div>
                <input type="hidden" name="fblogin" id="fblogin" value="0" />
            </form>

        </div>
    </div>
</div>

<div id="popup" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <div id="popup-content"></div>
    </div>
</div>

        